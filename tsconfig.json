{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    // Enable incremental compilation by reading/writing information from prior compilations to a file on disk
    "incremental": true,
    // Enable all strict type checking options.
    // Enabling --strict enables --noImplicitAny, --noImplicitThis, --alwaysStrict, --strictBindCallApply, --strictNullChecks, --strictFunctionTypes and --strictPropertyInitialization.
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "paths": {
      "@libs/winston-logger": [
        "libs/winston-logger/src"
      ],
      "@libs/winston-logger/*": [
        "libs/winston-logger/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
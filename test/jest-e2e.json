{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "modulePaths": ["<rootDir>"],
  "testEnvironment": "node",
  "roots": ["<rootDir>"],
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "@libs/winston-logger/(.*)": "<rootDir>/../libs/winston-logger/src/$1",
    "@libs/winston-logger": "<rootDir>/../libs/winston-logger/src",
    "@libs/zod/(.*)": "<rootDir>/../libs/zod/src/$1",
    "@libs/zod": "<rootDir>/../libs/zod/src"
  }
}
